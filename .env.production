# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Puppeteer Configuration for Production
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# API Configuration
API_TIMEOUT=60000
MAX_RETRIES=3
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Scraping Configuration
SCRAPING_HEADLESS=true
SCRAPING_TIMEOUT=45000
SCRAPING_WAIT_TIME=1000
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Base URL
BASE_URL=https://mimatourviagens.suareservaonline.com.br

# Mima Tour Website Configuration
MIMA_TOUR_BASE_URL=https://mimatourviagens.suareservaonline.com.br/44022
MIMA_TOUR_SEARCH_PARAMS=mes=all&destino=&category=&embarque=

# Debug Configuration
DEBUG=false
LOG_LEVEL=info
